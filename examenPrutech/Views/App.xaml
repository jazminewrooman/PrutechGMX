<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GMX.Views.App">
    <Application.Resources>

        <!-- Application resource dictionary -->
		<ResourceDictionary>
			<Style x:Key="labels" TargetType="Label">
				<Setter Property="TextColor" 		Value="Black" />
				<Setter Property="FontAttributes" 	Value="Bold" />
				<Setter Property="FontSize" 		Value="14"/>
			</Style>
			<Style x:Key="botonVerde" TargetType="Button">
				<Setter Property="TextColor" 		Value="White"/>
				<Setter Property="BackgroundColor"	Value="#04b5b5"/>
            </Style>
            <Style x:Key="switchVerde" TargetType="Switch">
                <Setter Property="BackgroundColor"  Value="#04b5b5"/>
            </Style>
			<Style x:Key="botonBlanco" TargetType="Button">
				<Setter Property="TextColor" 		Value="Black"/>
				<Setter Property="BackgroundColor" 	Value="White"/>
				<Setter Property="FontAttributes" 	Value="Bold" />
				<Setter Property="BorderWidth" 		Value="0"/>
				<Setter Property="BorderColor" 		Value="White"/>
			</Style>
		</ResourceDictionary>

    </Application.Resources>
</Application>