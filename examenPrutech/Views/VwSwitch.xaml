<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="GMX.Views.VwSwitch"
    x:Name="x_this" BackgroundColor="White">
    <ContentView.Content>
        <Grid x:Name="stack" Padding="10,15,10,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70*"/>
                <ColumnDefinition Width="30*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" FontSize="16" Text="{Binding Title, Source={Reference x_this}}"/>
            <StackLayout Grid.Column="1" Orientation="Horizontal" VerticalOptions="Center">
                <Label Text="No" VerticalTextAlignment="Center" FontSize="12"/>
                <Switch HorizontalOptions="Center" />
                <Label Text="Si" VerticalTextAlignment="Center" FontSize="12"/>
            </StackLayout>
        </Grid>
    </ContentView.Content>
</ContentView>