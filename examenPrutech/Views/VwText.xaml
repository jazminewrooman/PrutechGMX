<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="GMX.Views.VwText"
    x:Name="x_this" BackgroundColor="White">
    <ContentView.Content>
        <Grid x:Name="stack" Padding="10,15,10,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Text="{Binding Title, Source={Reference x_this}}"/>
            <Label Grid.Row="1" Grid.Column="0" FontAttributes="Bold" Text="{Binding Detail, Source={Reference x_this}}"/>
        </Grid>
    </ContentView.Content>
</ContentView>
