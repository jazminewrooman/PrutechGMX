<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="GMX.Views.ListaOpciones">
	<ContentPage.Content>
        <StackLayout BackgroundColor="{StaticResource ligthgray}" Padding="0" HorizontalOptions="Fill" Orientation="Vertical" VerticalOptions="Fill">
            <StackLayout HeightRequest="20"/>
            <ListView x:Name="lvOpciones" RowHeight="50" VerticalOptions="Fill" BackgroundColor="White">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Spacing="10" Padding="10,15,10,15" Orientation="Horizontal">
                                <Label FontSize="16" Text="{Binding opc}"/>
                                <!--<Image Grid.Column="1" Source="{Binding SelectedItem}"/>-->
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <StackLayout Padding="10">
                <Label FontSize="12" x:Name="lblLeyenda" Text=""/>
            </StackLayout>
        </StackLayout>
	</ContentPage.Content>
</ContentPage>
